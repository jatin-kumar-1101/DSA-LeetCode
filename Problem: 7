class Solution {
    public int reverse(int x) {

        int max = Integer.MAX_VALUE;
        int min = Integer.MIN_VALUE;
        int rev = 0 ;
        boolean flag = x<0;
        int temp = x<0 ? -1* x : x;
        if(x==min || x==max) return 0;
        while (temp>0){
            if((flag && (-1*rev/10)< min) || rev> max/10)  return 0;
            rev = rev*10 + (temp % 10);
            temp = temp/10;
        }

        return x<0 ? -1* rev : rev;
        
    }
}
