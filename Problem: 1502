class Solution {
    public boolean canMakeArithmeticProgression(int[] arr) {
        int len = arr.length;
        Arrays.sort(arr);
        int diff = (arr[0] - arr[1]);
        boolean ans = true;
        for(int i = 0;i<len-1;i++){ //-96,-68,-40,-12,16
            if((arr[i] - arr[i+1]) == diff){
                ans = true;
            }
            else{ans = false;
            break;
            }
        }
        return ans;
    }
}
